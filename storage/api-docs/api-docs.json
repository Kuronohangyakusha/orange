        "/api/v1/transactions": {
            "post": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Create a new transaction",
                "description": "Create a new transaction on one of the client's accounts",
                "operationId": "createTransaction",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "compte_id",
                                    "type",
                                    "montant"
                                ],
                                "properties": {
                                    "compte_id": {
                                        "type": "string",
                                        "format": "uuid",
                                        "example": "f9136320-10c8-47cc-8de0-ba4cc2ef78b1"
                                    },
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "depot",
                                            "retrait",
                                            "transfert",
                                            "paiement"
                                        ],
                                        "example": "depot"
                                    },
                                    "montant": {
                                        "type": "number",
                                        "format": "float",
                                        "example": "100.50"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Dépôt d'argent"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Transaction created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Transaction créée"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Transaction"
