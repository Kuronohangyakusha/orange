    "components": {
        "schemas": {
            "Client": {
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid",
                        "example": "f9136320-10c8-47cc-8de0-ba4cc2ef78b1"
                    },
                    "nom": {
                        "type": "string",
                        "example": "Dupont"
                    },
                    "prenom": {
                        "type": "string",
                        "example": "Jean"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "jean.dupont@example.com"
                    },
                    "telephone": {
                        "type": "string",
                        "example": "0123456789"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Compte": {
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid",
                        "example": "f9136320-10c8-47cc-8de0-ba4cc2ef78b1"
                    },
                    "user_id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "numero_compte": {
                        "type": "string",
                        "example": "FR4284166632"
                    },
                    "solde": {
                        "type": "number",
                        "format": "float",
                        "example": "150.75"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
